<?xml version="1.0" encoding="iso-8859-1"?>
<install version="1.1" type="plugin" group="search">
	<name>Search - Content</name>
	<author>Joomla! Project</author>
	<creationDate>November 2005</creationDate>
	<copyright>(C) 2005 Open Source Matters. All rights reserved.</copyright>
	<license>http://www.gnu.org/copyleft/gpl.html GNU/GPL</license>
	<authorEmail>admin@joomla.org</authorEmail>
	<authorUrl>www.joomla.org</authorUrl>
	<version>1.1</version>
	<description>Allows Searching of all Content items</description>
	<files>
		<filename plugin="content">content.php</filename>
	</files>
	<params>
		<param name="search_limit" type="text" size="5" default="50" label="Search Limit" description="Number of Search items to return"/>		
		<param name="@spacer" type="spacer" default="" label="" description="" />
		<param name="search_content" type="radio" default="1" label="Content Items" description="Search Content Items?">
			<option value="0">No</option>
			<option value="1">Yes</option>
		</param>
		<param name="search_static" type="radio" default="1" label="Static Content" description="Search Static Content?">
			<option value="0">No</option>
			<option value="1">Yes</option>
		</param>
		<param name="search_static_nonmenu" type="radio" default="1" label="Static Content NonMenu" description="Search Static Content not linked to a menu item?">
			<option value="0">No</option>
			<option value="1">Yes</option>
		</param>
		<param name="search_archived" type="radio" default="1" label="Archived Content" description="Search Archived Content?">
			<option value="0">No</option>
			<option value="1">Yes</option>
		</param>
	</params>
</install>