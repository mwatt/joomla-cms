<?xml version="1.0" encoding="utf8"?>
<metadata>
	<layout title="Standard Article Layout">
		<message>
			<![CDATA[The standard article layout displays a single article.]]>
		</message>
	</layout>
	<state>
		<name>Standard Article Layout</name>
		<description>The standard article layout displays a single article.</description>
		<params addParameterDir="administrator/components/com_content/elements">
			<param name="article_id" type="article" default="0" label="Select Article" description="An article" />
			<param name="@spacer" type="spacer" default="" label="" description="" />
			<param name="unique_itemid" type="radio" default="0" label="Unique Itemid" description="Use a unique Itemid for the link">
				<option value="0">No</option>
				<option value="1">Yes</option>
			</param>
		</params>
		<advanced>
			<param name="menu_image" type="imagelist" directory="/images/stories" hide_default="1" default="" label="Menu Image" description="PARAMMENUIMAGE" />
			<param name="secure" type="radio" default="0" label="SSL Enabled" description="PARAMSECURE">
				<option value="-1">Off</option>
				<option value="0">Ignore</option>
				<option value="1">On</option>
			</param>
		</advanced>
	</state>
</metadata>