<?xml version="1.0" encoding="iso-8859-1"?>
<mosparams type="menu" version="4.5.3">
	<name>Common</name>
	<description>Parameters common to all Menu Types, automatically loaded</description>
	<params>
		<param name="menu_image" type="imagelist" directory="/images/stories" hide_default="1" default="" label="Menu Image" description="paramMenuImage" />
		<param name="secure" type="radio" default="0" label="SSL Enabled" description="paramSecure">
			<option value="-1">Off</option>
			<option value="0">Ignore</option>
			<option value="1">On</option>
		</param>
		<param name="pageclass_sfx" type="text" size="20" default="" label="Page Class Suffix" description="paramPageClassSfx" />
		<param name="back_button" type="list" default="" label="Back Button" description="paramBackButton">
			<option value="">Use Global</option>
			<option value="0">Hide</option>
			<option value="1">Show</option>
		</param>
		<param name="page_title" type="radio" default="1" label="Page Title" description="Show/Hide the Page title">
			<option value="0">Hide</option>
			<option value="1">Show</option>
		</param>
		<param name="header" type="text" size="30" default="" label="Page Title" description="paramHeader" />

		<param name="@spacer" type="spacer" default="" label="" description="" />

		<param name="seo_title" type="text" size="30" default="" label="SEO Title" description="paramSeoTitle" />
		<param name="meta_key" type="textarea" default="" label="Meta Keyword" rows="2" cols="30" description="paramMetaKey"/>
		<param name="meta_descrip" type="textarea" default="" label="Meta Description" rows="5" cols="30" description="paramMetaDescrip"/>

		<param name="@spacer" type="spacer" default="" label="" description="" />
	</params>
</mosparams>
