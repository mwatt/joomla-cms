<?xml version="1.0" encoding="iso-8859-1"?>
<metadata>
	<control>
		<steps>
			<step id="1" name="Item">
				<message>
					<![CDATA[Choose the menu item to link to.]]>
				</message>
				<params addparameterdir="/administrator/components/com_menus/helpers/elements">
					<param name="menu_item" type="menuitem" label="Menu Item" />
				</params>
			</step>
		</steps>
	</control>
	<state>
		<params>
			<param name="menu_image" type="imagelist" directory="/images/stories" hide_default="1" default="" label="Menu Image" description="PARAMMENUIMAGE" />
			<param name="secure" type="radio" default="0" label="SSL Enabled" description="PARAMSECURE">
				<option value="-1">Off</option>
				<option value="0">Ignore</option>
				<option value="1">On</option>
			</param>
		</params>
	</state>
</metadata>	