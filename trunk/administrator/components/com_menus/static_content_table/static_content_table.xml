<?xml version="1.0" encoding="iso-8859-1"?>
<mosparams type="menu" version="4.5.3">
	<name>Table - Static Content</name>
	<group>Content</group>
	<description>Shows a Table view of Static Content items</description>
	<params>
		<param name="orderby" type="list" default="" label="Order by" description="paramOrderBy">
			<option value="">Default</option>
			<option value="date">Oldest first</option>
			<option value="rdate">Most recent first</option>
			<option value="alpha">Title Alphabetical</option>
			<option value="ralpha">Title Reverse-Alphabetical</option>
			<option value="author">Author Alphabetical</option>
			<option value="rauthor">Author Reverse-Alphabetical</option>
			<option value="hits">Most Hits</option>
			<option value="rhits">Least Hits</option>
			<option value="order">Ordering</option>
		</param>
		<param name="date_format" type="text" size="15" default="" label="Date Format" description="paramDateformat" />
		<param name="date" type="list" default="" label="Date Column" description="Show/Hide the Date column">
			<option value="">Use Global</option>
			<option value="0">Hide</option>
			<option value="1">Show</option>
		</param>
		<param name="author" type="list" default="" label="Author Column" description="Show/Hide the Author column">
			<option value="">Use Global</option>
			<option value="0">Hide</option>
			<option value="1">Show</option>
		</param>
		<param name="hits" type="list" default="" label="Hits Column" description="Show/Hide the Hits column">
			<option value="">Use Global</option>
			<option value="0">Hide</option>
			<option value="1">Show</option>
		</param>
		<param name="headings" type="radio" default="1" label="Table Headings" description="Show/Hide the Table Headings">
			<option value="0">Hide</option>
			<option value="1">Show</option>
		</param>
		<param name="navigation" type="radio" default="1" label="Navigation Bar" description="Show/Hide the Navigation bar">
			<option value="0">Hide</option>
			<option value="1">Show</option>
		</param>
		<param name="order_select" type="radio" default="0" label="Order Select" description="Show/Hide the Order Select dropdown">
			<option value="0">Hide</option>
			<option value="1">Show</option>
		</param>
		<param name="display" type="radio" default="1" label="Display Select" description="Show/Hide the Display Select dropdown">
			<option value="0">Hide</option>
			<option value="1">Show</option>
		</param>
		<param name="display_num" type="list" default="50" label="Display Number" description="paramDisplayNum">
			<option value="5">5</option>
			<option value="10">10</option>
			<option value="15">15</option>
			<option value="20">20</option>
			<option value="25">25</option>
			<option value="30">30</option>
			<option value="50">50</option>
		</param>
		<param name="filter" type="radio" default="1" label="Filter" description="Show/Hide the Filter ability">
			<option value="0">Hide</option>
			<option value="1">Show</option>
		</param>
		<param name="filter_type" type="list" default="title" label="Filter Field" description="Which field shall the filter apply to">
			<option value="title">Title</option>
			<option value="author">Author</option>
			<option value="hits">His</option>
		</param>
		<param name="@spacer" type="spacer" default="" label="" description="" />
		<param name="non_menu" type="list" default="0" label="Items to Display" description="paramNonMenu">
			<option value="0">Menu Linked Content only</option>
			<option value="1">Non-Menu Linked Content only</option>
			<option value="2">Both</option>
		</param>
	</params>
</mosparams>
