{
    "name": "joomla/joomla-cms",
    "type": "project",
    "description": "Joomla CMS",
    "keywords": ["joomla", "cms"],
    "homepage": "https://github.com/joomla/joomla-cms",
    "license": "GPL-2.0+",
    "config": {
        "vendor-dir": "libraries/vendor"
    },
    "require": {
        "php": ">=5.3.10",
        "joomla/application": "~1.2",
        "joomla/di": "~1.2",
        "joomla/registry": "~1.2",
        "joomla/string": "~1.2",
        "joomla/uri": "~1.1",
        "joomla/utilities": "~1.3",
        "ircmaxell/password-compat": "1.*",
        "leafo/lessphp": "0.5.*",
        "phpmailer/phpmailer": "5.2.*",
        "symfony/yaml": "2.*"
    },
    "require-dev": {
        "squizlabs/php_codesniffer": "1.5.*",
        "pear/cache_lite": "1.7.*",
        "phpunit/phpunit": "4.6.*",
        "phpunit/dbunit": "~1.3"
    },
     "suggest": {
        "phpmd/phpmd": "PHP Mess Detector",
        "block8/php-docblock-checker": "PHP Docblock Checker"
     }
}
