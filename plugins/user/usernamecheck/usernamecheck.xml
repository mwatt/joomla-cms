<?xml version="1.0" encoding="utf-8"?>
<extension version="3.1" type="plugin" group="user" method="upgrade">
	<name>plg_user_usernamecheck</name>
	<author>Joomla! Project</author>
	<creationDate>April 2016</creationDate>
	<copyright>Copyright (C) 2005 - 2016 Open Source Matters. All rights reserved.</copyright>
	<license>GNU General Public License version 2 or later; see LICENSE.txt</license>
	<authorEmail>admin@joomla.org</authorEmail>
	<authorUrl>www.joomla.org</authorUrl>
	<version>3.0.0</version>
	<description>PLG_USER_USERNAMECHECK_XML_DESCRIPTION</description>
	<files>
		<filename plugin="usernamecheck">usernamecheck.php</filename>
	</files>
	<languages>
		<language tag="en-GB">en-GB.plg_user_usernamecheck.ini</language>
		<language tag="en-GB">en-GB.plg_user_usernamecheck.sys.ini</language>
	</languages>
	<config>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field name="minNumChars" type="text"
					size="4"  
					value="3"
					filter="int"
					label="PLG_USER_USERNAMECHECK_FIELD_MINNUMCHARS_LABEL"
					description="PLG_USER_USERNAMECHECK_FIELD_MINNUMCHARS_DESC" 
				/>
				<field name="maxNumChars" type="text"
					size="4" 
					value="20"
					filter="int"
					label="PLG_USER_USERNAMECHECK_FIELD_MAXNUMCHARS_LABEL"
					description="PLG_USER_USERNAMECHECK_FIELD_MAXNUMCHARS_DESC" 
				/>
				<field name="charset" type="textarea"
					rows="4" 
					cols="50" 
					value="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ1234567890_"
					filter="string"
					label="PLG_USER_USERNAMECHECK_FIELD_CHARSET_LABEL"
					description="PLG_USER_USERNAMECHECK_FIELD_CHARSET_DESC" 
				/>
			</fieldset>

		</fields>
	</config>
	</config>
</extension>
