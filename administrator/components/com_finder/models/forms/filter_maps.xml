<?xml version="1.0" encoding="utf-8"?>
<form>
    <fieldset addfieldpath="/administrator/components/com_templates/models/fields" />

    <fields name="filter">
        <field
                name="search"
                type="text"
                hint="JSEARCH_FILTER"
                />
        <field
                name="state"
                type="status"
                filter="*,0,1"
                onchange="this.form.submit();"
                >
            <option value="">JOPTION_SELECT_PUBLISHED</option>
        </field>

        <field
                name="branch"
                type="branches"
                default="0"
                onchange="this.form.submit();"
                >
            <option value="">COM_FINDER_MAPS_SELECT_BRANCHE</option>
        </field>

    </fields>
    <fields name="list">
        <field
                name="limit"
                type="limitbox"
                class="input-mini"
                default="25"
                onchange="this.form.submit();"
                />
    </fields>
</form>
