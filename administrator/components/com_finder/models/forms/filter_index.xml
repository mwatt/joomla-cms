<?xml version="1.0" encoding="utf-8"?>
<form>
    <fields name="filter">
        <field
                name="search"
                type="text"
                hint="JSEARCH_FILTER"
                />
        <field
                name="state"
                type="status"
                filter="*,0,1"
                onchange="this.form.submit();"
                >
            <option value="">JOPTION_SELECT_PUBLISHED</option>
        </field>
        <field
                name="type"
                type="sql"
                default="0"
                query="SELECT id AS value, title AS type FROM #__finder_types ORDER BY title"
                onchange="this.form.submit();"
                >
            <option value="">COM_FINDER_MAPS_SELECT_TYPE</option>
        </field>
    </fields>
    <fields name="list">
        <field
                name="limit"
                type="limitbox"
                class="input-mini"
                default="25"
                onchange="this.form.submit();"
                />
    </fields>
</form>
